        <GroupBox Margin="363,246,64,280" Header="Подоходный налог"/>
        <TextBox Margin="390,266,79,290" x:Name="nal"/>

        <GroupBox Margin="369,343,58,178" Header="К выдаче"/>
        <TextBox Margin="390,364,79,192" x:Name="vidach"/>

        <Button Content="Ок" Click="vich" Margin="390,478,98,66"/>
    </Grid>
</Window>
