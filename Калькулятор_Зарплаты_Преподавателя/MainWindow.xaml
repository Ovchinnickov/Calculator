        <GroupBox Margin="14,41,392,497" Header="Квалификационный уровень"/>
        <TextBox Margin="24,61,414,500" x:Name="uroven"/>

        <GroupBox Margin="369,47,58,477" Header="Начислено"/>
        <TextBox Margin="384,72,85,484" x:Name="nach" RenderTransformOrigin="0.489,-0.138"/>

        <GroupBox Margin="363,143,64,381" Header="Налог в пенсионный фонд"/>
